source 'https://rubygems.org'


gem 'rails', '4.2.6'

gem 'rails-api'

gem 'spring', :group => :development

gem 'mongoid', '~> 4.0', '>= 4.0.2'
gem 'bson_ext'

gem 'active_model_serializers', '~> 0.10.0'

group :development do
  gem 'capistrano'
  gem 'capistrano-rails', require: false
  gem 'capistrano-bundler', require: false
  gem 'capistrano-rvm'
end

group :production do
  gem 'unicorn'
  gem "unicorn-rails"
end




